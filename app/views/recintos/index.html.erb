<div class="row mt-3">
  <div class="col-md-6 d-flex align-items-center">
    <h1 class="title">Recintos</h1>
  </div>
  <div class="col-md-6">
    <%= link_to new_recinto_path, data: { turbo: false, controller: "recinto-modal" }, class: "btn btn-default float-end small-font" do %>
      Cadastrar <i class="fa-solid fa-circle-plus"></i>
    <% end %>
  </div>

  <div id="error"></div>
</div>

<table class="table small-font mt-3 mb-5">
  <thead>
    <tr>
      <th class="col-md-3">Nome</th>
      <th class="col-md-3">Tipo</th>
      <th></th>
    </tr>
  </thead>
  <tbody id="recintos_list" >
    <% @recintos.each do |recinto| %>
      <%= render "recinto", recinto: recinto %>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center mb-5">
  <%= paginate @recintos %>
</div>
