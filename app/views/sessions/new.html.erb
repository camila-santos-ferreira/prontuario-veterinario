<h1 class="default-color text-center" style="font-size: 20px; margin-top: 100px; margin-bottom: 80px;">Prontuário Veterinário</h1>

<div class="d-flex justify-content-center align-items-center">
  <div class="col-md-3">
    <% if alert.present? %>
      <div class="alert alert-danger" role="alert">
        <span class="small-font"><%= alert %></span>
      </div>
    <% end %>
    
    <%= form_with(url: login_path) do |form| %>
      <div class="form-group">
        <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "form-control mid-font", id: "exampleInputEmail1", placeholder: "Email" %>
      </div>

      <div class="form-group mt-3">
        <%= form.password_field :password, required: true, autocomplete: "current-password", class: "form-control mid-font", id: "exampleInputPassword1", placeholder: "Senha" %>
      </div>

      <div class="mt-3">
        <%= form.submit "Entrar", class: "btn btn-default mid-font w-100" %>
      </div>
    <% end %>
  </div>
</div>

